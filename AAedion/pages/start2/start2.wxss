/**start2.wxss**/
.title {
  background-color: #03a9f4;
  color: #fff;
  font-size: 65rpx;
  font-weight: lighter;
  letter-spacing: 5rpx;
  align-content: flex-start;
  padding: 50rpx 50rpx 100rpx 50rpx;
  text-align: center;
  line-height: 85rpx;
}

.sign {
  align-content: center;
}

.login {
  height: 50%;
}


.school_sign {
  width: 750rpx;
  height: 250rpx;
  align-content: center;
  margin-bottom: 0;
  opacity: 1;
}

.input_a{
  margin: 90rpx;
  margin-top: 50rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  vertical-align: middle;
  justify-content: space-between;
  opacity: 1;
  border-bottom: 25rpx;
  border-bottom-color: #000;
}

.input_a input{
  border-radius: 10rpx;
  background-color: #fff;
  width: 450rpx;
  font-size: 1.0rem;
  text-align: center;
  line-height: 100rpx;
  color:#444;
  margin: 10rpx;
  height: 70rpx;
  border-bottom: 2rpx dotted #BDBDBD;
}

.input_a button{
  background-color: #2ab5f5;
  color:#fff;
  font-size: 1.3rem;
  font-weight: lighter;
  line-height: 70rpx;
  width: 480rpx;
  height: 85rpx;
  margin-top: 35rpx;
}

.input_a button:active {
  background-color: #2ab5f5;
  opacity: 0.5;
  position: relative;
  top: 2rpx;
}

