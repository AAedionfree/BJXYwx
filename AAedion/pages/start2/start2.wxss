.inter {
  margin-top: 25%;
  width: 100%;
  height:100%;
  position: absolute;
  background-color: #f5f5f5;
  opacity: 0.9;
  display: flex;
  flex-direction: column;
  align-items: center;
  vertical-align: middle;
}

.login-help {
  display: flex;
  align-items: flex-end;
  justify-content: flex-end;
  padding: 0 30rpx;
  font-size: 15pt;
  color: #bbb;
}
.login-help-img {
  width: 15pt;
  height: 15pt;
  margin: 0 5rpx;
}

.help {
  position: absolute;
  z-index: 100;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.box {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  width: 80%;
  background: #fff;
  border-radius: 10px;
  box-shadow: 0 0 50px rgba(22,22,22,.35);
  /* transform: translate3d(0,-400rpx,0); */
}
.box-hd {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100rpx;
  border-bottom: 1px solid #eee;
}
.box-title {
  font-size: 13pt;
}
.box-close {
  position: absolute;
  right: 20rpx;
  width: 35rpx;
  height: 35rpx;
  padding: 15rpx;
}
.box-bd {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 15rpx 40rpx 30rpx;
}
.help-q {
  color: #999;
  font-size: 11pt;
  line-height: 200%;
  margin-top: 5rpx;
}
.help-a {
  text-indent: 1em;
  line-height: 160%;
  font-size: 11pt;
  display: flex;
  flex-direction: column;
}
.help-a text{
  word-break: break-all;
}