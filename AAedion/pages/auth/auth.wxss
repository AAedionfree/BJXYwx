/* auth.wxss */
.top{
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  background: #03a9f4;
  color: #fff;
  height: 20%;
  font-size: 70rpx;
  font-family: 微软雅黑;
  font-weight: bold;
  text-align: center;
  padding-bottom: 30rpx;
}

.clickbox{
  display: flex;
  align-content: center;
  min-height: 300rpx;
  border: 10rpx dashed #757575;
  margin-top: 30rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  box-shadow: 0rpx 10rpx 15rpx #757575;
}

.info{
  margin-left: 30rpx;
  margin-top: 70rpx;
  width: 450rpx;
}

.namenum{
  display: flex;
  flex-direction: row;
}

.name{
  font-size: 50rpx;
  font-weight: bold;
}

.num{
  font-size: 35rpx;
  color: #757575;
  margin-top: 20rpx;
}

.score{
  display: flex;
  margin-top: 50rpx;
  margin-right: 30rpx;
  align-items: center;
  justify-content:center;
  color: #fff;
  font-weight: bold;
  font-size: 40rpx;
  background: #03a9f4;
  border: 10rpx solid #5686bf;
  height: 150rpx;
  width: 150rpx;
  border-radius: 100rpx;
}

.subject{
  font-size: 40rpx;
}

.refresh_icon{
  margin-left: 80rpx;
  margin-right: -80rpx;
  height: 70rpx;
  width: 70rpx;
}