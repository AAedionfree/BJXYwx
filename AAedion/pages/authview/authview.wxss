/* auth.wxss */

.top {
  position: fixed;
  top: 0rpx;
  width: 100%;
  background: #03a9f4;
  color: #fff;
  height: 100rpx;
  font-size: 70rpx;
  font-family: 微软雅黑;
  font-weight: bold;
  text-align: center;
  padding-bottom: 30rpx;
}

.namenum {
  display: flex;
  flex-direction: row;
  align-content: center;
  align-items: center;
  height: 150rpx;
  border-bottom: 10rpx dashed #03a9f4;
  font-family: 微软雅黑;
}

.name {
  margin-left: 50rpx;
  font-size: 40rpx;
  color: #000;
}

.num {
  padding-top: 10rpx;
  margin-left: 50rpx;
  font-size: 40rpx;
  color: #000;
}

.detail {
  display: flex;
  flex-direction: column;
  font-family: 微软雅黑;
}

.subject {
  margin-top: 30rpx;
  margin-left: 50rpx;
  font-size: 40rpx;
  color: #000;
}

.imgbox {
  display: flex;
  align-content: center;
  align-items: center;
  justify-content: center;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  margin-top: 30rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  border: 10rpx dashed #757575;
  box-shadow: 0rpx 10rpx 15rpx #757575;
}

.bottom-white {
  background: #fff;
  height: 130rpx;
}

.confirm {
  margin-top: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 10rpx dashed #03a9f4;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-content: center;
  align-items: center;
  bottom: 0rpx;
  width: 100%;
  height: 130rpx;
}

.reject {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  background: #f00;
  color: #fff;
  font-weight: bold;
  height: 100%;
  width: 50%;
}

.accept {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-weight: bold;
  height: 100%;
  width: 50%;
  background: #03a9f4;
}
