/**index.wxss**/
page {
  height:100%;
}

scroll-view {
  margin-top:10rpx;
  height: 76%;
  white-space: nowrap;
}

.top {
  background-color:#03a9f4;
  height: 18%;
  padding-left:60rpx;
  padding-top:20rpx;
  padding-bottom:40rpx;
  border-bottom-right-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
  box-shadow: 0rpx 7rpx 10rpx #757575;
}

.motd {
  color:#fff;
  font-family: 微软雅黑;
}

.motdu {
  font-size:60rpx;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.clickbox1 {
  display: flex;
  flex-direction: row;
  justify-content: left;
  height:15%;
  width: 100%;
  border-bottom:5rpx solid  #757575;
  border-bottom-right-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
  box-shadow: 0rpx 7rpx 10rpx #757575;
}

.clickbox {
  display: flex;
  flex-direction: row;
  justify-content: left;
  padding-top:80rpx;
  height:21.5%;
  width: 100%;
  border-bottom:5rpx solid  #757575;
  border-bottom-right-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
  box-shadow: 0rpx 7rpx 10rpx #757575;
}

.box_icon {
  width: 120rpx;
  height: 120rpx;
  margin-top:-20rpx;
  margin-right: 0rpx;
  margin-left:40rpx;
}

.clickword {
  justify-content:center;
  width: 70%;
  text-align: center;
  font-family: 微软雅黑;
  color:#757575;
  font-size:55rpx;
}

.userinfo-avatar {
  margin-left:70%;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin-right: 50rpx;
  margin-top:-100rpx;
  position: absolute;
  z-index: 2;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}