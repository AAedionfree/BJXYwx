/**index.wxss**/
page {
  height:100%;
}

scroll-view {
  margin-top:10rpx;
  height: 85%;
  white-space: nowrap;
}

.top {
  display: flex;
  align-items: center;
  flex-direction:row;
  flex-wrap:nowrap;
  justify-content: left;
  background-color:#03a9f4;
  height: 14%;
  box-shadow: 0rpx 7rpx 10rpx #757575;
}

.motd {
  color:#fff;
  font-family: 微软雅黑;
  font-size:60rpx;
  margin-left:50rpx; 
}

.clickbox {
  align-items: center;
  display: flex;
  flex-direction: row;
  justify-content: left;
  height:32.6%;
  width: 100%;
  border-bottom:5rpx solid  #757575;
  border-bottom-right-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
  box-shadow: 0rpx 7rpx 10rpx #757575;
}

.box_icon {
  width: 120rpx;
  height: 120rpx;
  margin-right: 20rpx;
  margin-left:40rpx;
}

.box_icon2 {
  width: 120rpx;
  height: 120rpx;
  margin-top:-20rpx;
  margin-right: 0rpx;
  margin-left:40rpx;
}

.clickword {
  justify-content:center;
  width: 70%;
  text-align: center;
  font-family: 微软雅黑;
  color:#757575;
  font-size:55rpx;
}

.userinfo-avatar {
  margin-left:70%;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin-right: 50rpx;
  margin-top:-100rpx;
  position: absolute;
  z-index: 2;
}

::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 40%;
  left: 0;
  z-index: 9999;
  background: #fff;
  margin: -180rpx 105rpx;
  border-radius: 36rpx;
}

.modal-title {
  padding-top: 50rpx;
  font-size: 36rpx;
  color: #030303;
  text-align: center;
}

.modal-content {
  padding: 50rpx 32rpx;
}

.modal-input {
  display: flex;
  flex-direction: column;
  justify-content: center;
  background: #fff;
  font-size: 28rpx;
}


.input {
  width: 100%;
  height: 82rpx;
  text-align: center;
  font-size: 28rpx;
  line-height: 28rpx;
  color: #333;
}

input-holder {
  border-radius: 10rpx;
  background-color: #fff;
  width: 400rpx;
  font-size: .8rem;
  text-align: center;
  line-height:70rpx;
  color:#444;
  margin:10rpx;
  height: 70rpx;
  padding-bottom: #444;
  padding:1cm;
  border-bottom: #444;
  border:1rpx;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 86rpx;
}

.btn-cancel {
  width: 50%;
  color: #666;
  text-align: center;
  border-right: 1px solid #dedede;
}

.btn-confirm {
  width: 50%;
  color: #3cdb0be1;
  text-align: center;
}